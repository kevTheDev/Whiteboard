<h1>Editing gallery</h1>

<% form_for(@gallery) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :board_id %><br />
    <%= f.text_field :board_id %>
  </p>
  <p>
    <%= f.label :revision %><br />
    <%= f.text_field :revision %>
  </p>
  <p>
    <%= f.label :composite %><br />
    <%= f.text_area :composite %>
  </p>
  <p>
    <%= f.label :thumbnail %><br />
    <%= f.text_area :thumbnail %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @gallery %> |
<%= link_to 'Back', galleries_path %>
